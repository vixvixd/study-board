{{>layout/header}}

<form>
    {{#board}}
        <div class="container mt-5">
            <div class="form-group">
                <label for="title">제목</label>
                <input name="title" class="form-control" id="title" value="{{title}}">
            </div>
            <div class="form-group">
                <label for="content">내용</label>
                <textarea name="content" class="form-control" id="content" rows="5">{{content}}</textarea>
            </div>
            <div class="form-group">
                <label for="author">작성자</label>
                <input name="author" class="form-control" id="author" value="{{author}}" readonly>
            </div>
            <input type="hidden" id="board_id" value="{{id}}">
            <button type="button" class="btn btn-dark" id="update">수정완료</button>
            <a href="/" type="button" class="btn btn-outline-dark">취소</a>
        </div>
    {{/board}}
</form>


<script src="/js/app/board.js"></script>

{{>layout/footer}}